<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for weather forecast list item for future dayName (not today) -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    android:background="@drawable/backgroundd"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:text="سعر الخدمة"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_order_price_fragment_create_order_third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white" />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/btn_send_order"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/login_style"
        android:text="ارسال الطلب"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

</LinearLayout>
